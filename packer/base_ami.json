    "builders": [
      {
        "type": "amazon-ebs",
        "profile": "dev",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `vpc_region`}}",
        "vpc_id": "{{user `vpc_id`}}",
        "instance_type": "t2.micro",
        "subnet_id": "{{user `subnet_id`}}",
        "source_ami": "{{user `source_ami`}}",
        "associate_public_ip_address": true,
        "ami_name": "csye6225_{{timestamp}}",
        "ami_groups": "all",
        "ssh_username": "{{user `ssh_username`}}",
        "ami_description": "Linux AMI for csye6225",
        "ami_block_device_mappings": [
            {
                "delete_on_termination": true,
                "device_name": "/dev/xvda",
                "volume_size": 50,
                "volume_type": "gp2"
            }
        ],
        "tags": {
            "Tool": "Packer",
            "Author": "user",
            "Environment": "dev"
        }
      }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "setup.sh"
        },
        {
            "type": "file",
            "source": "../",
            "destination": "/home/ubuntu/node-app"
        },
        {
            "type": "shell",
            "inline": [
                "cd /home/ubuntu/node-app",
                "rm -rf node_modules",
                "rm -rf package-lock.json",
                "sudo npm install",
                "sudo pm2 start index.js",
                "sudo pm2 startup systemd",
                "sudo pm2 save",
                "sudo ln -s /home/ubuntu/node-app/webapp.service /etc/systemd/system/webapp.service",
                "sudo systemctl daemon-reload",
                "sudo systemctl enable webapp.service",
                "sudo systemctl start webapp.service"
            ]
        },
        {
            "type": "shell",
            "inline": [
                "sudo apt-get -y install mysql-server",
                "sudo systemctl enable --now mysql",
                "systemctl status mysql",
                "sudo systemctl start mysql",
                "sudo mysql -e \"ALTER USER 'root'@'localhost' IDENTIFIED WITH mysql_native_password BY 'password';\"",
                "sudo mysql -u root -ppassword -e \"CREATE DATABASE IF NOT EXISTS userDB;\""
            ]
        }
    ]
  }
  